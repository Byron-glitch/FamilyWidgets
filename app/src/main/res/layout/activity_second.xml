<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <CalendarView
            android:layout_width="328dp"
            android:layout_height="300dp" android:id="@+id/calendarView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19" app:layout_constraintHorizontal_bias="0.544"
            android:firstDayOfWeek="1"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.749"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_setDate"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:text="31/2/1951"
            android:backgroundTint="#FF9800"/>
    <Button
            android:text="Esconder"
            android:layout_width="120dp"
            android:layout_height="50dp" android:id="@+id/btn_esconder"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.123"
            android:backgroundTint="#A11133"/>
    <Button
            android:text="Mostrar"
            android:layout_width="120dp"
            android:layout_height="50dp" android:id="@+id/btn_mostrar"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            app:layout_constraintStart_toEndOf="@+id/btn_esconder" android:layout_marginStart="88dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.234"
            android:backgroundTint="#2CCD10"/>
    <TextView
            android:text="CalendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lbl_dateView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textSize="20dp"
    />
    <TextView
            android:text="ProgressBar
"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lbl_dateView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="448dp"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.488"/>

</androidx.constraintlayout.widget.ConstraintLayout>
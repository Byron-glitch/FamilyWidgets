<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/btn_onResume">


    <ImageView
            android:layout_width="89dp"
            android:layout_height="78dp" app:srcCompat="@android:mipmap/sym_def_app_icon"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="do_onclickImage"
            app:layout_constraintVertical_bias="0.059"/>

    <WebView
            android:id="@+id/webView"
            android:layout_width="355dp"
            android:layout_height="182dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.079"/>
    <Button
            android:text="Siguente actividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_next"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="24dp"/>
    <Button
            android:text="onPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_pause"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="328dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/webView"/>
    <Button
            android:text="ONRESUME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_resume"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="328dp" app:layout_constraintHorizontal_bias="0.822"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/webView"/>
    <Button
            android:text="go back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_goback"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="256dp" app:layout_constraintHorizontal_bias="0.226"/>
    <Button
            android:text=" go forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_goforward"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="256dp" app:layout_constraintHorizontal_bias="0.773"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text=""
            android:hint="https://www.example.com"
            android:ems="10"
            android:id="@+id/txt_url"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/webView" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>